<div class="container edit_button">
    <button class="btn btn-lg btn-warning btn-lg" type="submit" onclick="javascript:history.back()">
        <span class="glyphicon glyphicon-chevron-left"></span>
        Account</button>
</div>

<div class="container banner">
    <div class="row">
        <h1 class="text-center">Edit your details:</h1>
    </div>
</div>

<div class="container">
    <form action="/developer/<%=@developer.id%>" method="post">
        <input type="hidden" name="_method" value="put">
        <div class="form-group">
            <label for="name">Name:</label>
            <input id="name" name="name" class="form-control" value="<%= @developer['name'] %>">
        </div>
        <div class="form-group">
            <label for="email">Email address:</label>
            <input id="email" name="email" class="form-control" value="<%= @developer['email'] %>">
        </div>

        <label for="code">Code snippet:</label>
        <textarea id="code" class="form-control" name="code" rows="3"><%= @developer['code'] %></textarea>

        <div class="col-xs-6 text-right">
            <div class="container form_button">
                <button type="submit" class="btn btn-success btn-md">Submit</button>

                <div class="container form_button">
                    <form method="post" action="/developer/<%= @developer.id %>/delete">
                        <button type="submit" class="btn btn-danger btn-md">Delete account</button>
                    </form>
                </div>

            </div>
        </div>
    </form>
</div>
