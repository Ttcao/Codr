<div class="container edit_button">
  <div class="text-left">
    <a class="btn btn-warning btn-lg btn-md" href="/company/<%=@company.id%>/code" role="button">View Code</a>
  </div>
  <div class="text-right">
    <form action="/company/logout" method='post'>
        <input type='hidden' name='_method' value='delete' />
        <button class="btn btn-warning btn-lg btn-md">Logout</button>
    </form>
  </div>
</div>

<div class="container banner text-center">
    <div class="row">
        <h1 class="text-center">Company details:</h1>
    </div>
</div>

<div class="container text-center">
    <h3>
        <%= @company.name %>
    </h3>
    <p>
        <strong>Email:
        </strong><%= @company.email %>
    </p>
    <p>
        <strong>Description:
        </strong><%= @company.description %>
    </p>
</div>

<div class="container form_button text-center">
    <a class="btn btn-success btn-md" href="/company/<%=@company.id%>/edit" role="button">Edit</a>
</div>
