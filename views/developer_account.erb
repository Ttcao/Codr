<div class="container edit_button">
  <div class="text-left">
    <a class="btn btn-warning btn-lg btn-md" href="/developer/<%=@developer.id%>/matches" role="button">View Matches</a>
  </div>
  <div class="text-right">
    <form action="/developer/logout" method='post'>
        <input type='hidden' name='_method' value='delete' />
        <button class="btn btn-warning btn-lg btn-md">Logout</button>
    </form>
  </div>
</div>


<div class="container banner">
    <div class="row">
        <h1 class="text-center">Your details:</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="text-center">
            <p>
                <strong>Name:</strong>
                <%= @developer.name %>
            </p>
            <p>
                <strong>Email:</strong>
                <%= @developer.email %>
            </p>
        </div>

        <div class="text-center">
            <p>
                <strong>Code snippet:</strong>
            </p>
            <pre class="text-left developer_code"><%= @developer.code %> </pre>
        </div>

    </div>
</div>

<div class="container form_button text-center">
    <a class="btn btn-success btn-md" href="/developer/<%=@developer.id%>/edit" role="button">Edit</a>
</div>
